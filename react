import React, { useState } from "react";
  import "./styles.css";
  
const App = () => {
  //Iniciamos nuestro contador con 0
  const [counter, setCounter] = useState(0)
  //funcion que se llama cuando se preciona el botón incrementar
  const sumar = () => { 
    setCounter(counter + 1) //incremento de 1
  }
  //funcion que se llama cuando se preciona el botón restar
  const restar = () => { 
    setCounter(counter - 1) //decremento de 1
  }
  
  return (
    //estilo de nuestro div
    <div style={{
      display: 'flex', 
      flexDirection: 'column',
      alignItems: 'center',
      justifyContent: 'center',
      position: 'absolute',
      width: '100%',
      height: '100%',
      top: '-15%',
    }}>
      CONTADOR
      <div style={{
        fontSize: '200%',
        position: 'relative',
        padding: '10%',
      }}>
        {counter}
      </div>
      <div className="botonsumar">
        <button style={{
         //estilo del boton sumar
          fontSize: '100%',
          position: 'relative',
          margin: '5px',
          backgroundColor: '#ADE8BF',
          color: 'BLACK',
        }}
          onClick={sumar}>Sumar 1</button>
        <button style={{
          //estilo del boton restar
          fontSize: '100%',
          position: 'relative',
          margin: '5px',
          backgroundColor: '#E2504E',
          color: 'BLACK',
        }}
          onClick={restar}>Restar 1</button>
      </div>
    </div>
  )
}
  
export default App
